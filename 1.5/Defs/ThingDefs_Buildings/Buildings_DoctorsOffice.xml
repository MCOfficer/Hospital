<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <ThingDef ParentName="BenchBase">
    <defName>DoctorsDesk</defName>
    <label>Doctor's desk</label>
    <description>Patients that do not recovery or surgery pass by here. Needs a medical pawn on standby and an examination table.</description>
    <thingClass>Building_WorkTable</thingClass>
    <graphicData>
      <texPath>Things/Building/Production/TableButcher</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(3.5,1.5)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.20</staticSunShadowHeight>
    <costStuffCount>75</costStuffCount>
    <costList>
      <WoodLog>20</WoodLog>
    </costList>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>2000</WorkToBuild>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Cleanliness>-15</Cleanliness>
    </statBases>
    <size>(3,1)</size>
    <designationCategory>Production</designationCategory>
    <uiOrder>2100</uiOrder>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <recipes>
      <li>ButcherCorpseFlesh</li>
      <li>Make_Kibble</li>
    </recipes>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
      <paintable>true</paintable>
    </building>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
    </comps>
    <designationHotKey>Misc3</designationHotKey>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
  </ThingDef>
  
  <ThingDef ParentName="Bed">
    <defName>ExaminationTable</defName>
    <label>examination table</label>
    <description>Goes with the doctor's desk.</description>
    <graphicData Inherit="False">
      <texPath>Things/Building/Misc/SlabBed/SlabBed</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(2,2)</drawSize>
    </graphicData>
    <canGenerateDefaultDesignator>false</canGenerateDefaultDesignator>
    <statBases Inherit="False">
      <MaxHitPoints>140</MaxHitPoints>
      <WorkToBuild>400</WorkToBuild>
      <Mass>30</Mass>
      <BedRestEffectiveness>1</BedRestEffectiveness>
      <ImmunityGainSpeedFactor>1.07</ImmunityGainSpeedFactor>
      <SurgerySuccessChanceFactor>1</SurgerySuccessChanceFactor>
      <Flammability>1.0</Flammability>
    </statBases>
    <size>(1,2)</size>
    <building>
      <bed_slabBed>true</bed_slabBed>
      <bed_showSleeperBody>true</bed_showSleeperBody>
    </building>
    <stuffCategories Inherit="False">
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>30</costStuffCount>
    <fillPercent>0.3</fillPercent>
    <pathCost>20</pathCost>
    <staticSunShadowHeight>0.17</staticSunShadowHeight>
    <castEdgeShadows>True</castEdgeShadows>
    <designationHotKey>Misc2</designationHotKey>
    <techLevel>Medieval</techLevel>
    <uiIconScale>0.90</uiIconScale>
    <uiOrder>2030</uiOrder>
  </ThingDef>
  
  </Defs>